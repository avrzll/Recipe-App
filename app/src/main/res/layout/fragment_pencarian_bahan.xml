<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PencarianBahan">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/title_pencarian_bahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:text="Cari bahanmu dan temukan resep"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/pencarian_bahan"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/plus_jakarta_sans_light"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:hint="Ayam, Kecap, Asam"
            android:textColor="#636363"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_search_bahan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_pencarian_bahan" />

        <ImageButton
            android:id="@+id/btn_search_bahan"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_btn_search"
            android:src="@drawable/ic_search_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pencarian_bahan" />

